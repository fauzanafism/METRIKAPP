<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/soal"
    android:fitsSystemWindows="true"
    tools:context=".soal.soal">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="50dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <TextView
                android:id="@+id/no_soal"
                android:layout_weight="1"
                android:fontFamily="@font/mont"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="@string/nomorsoal"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/no_soalphp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="0"
                android:textAlignment="center"
                android:visibility="gone" />

            <Button
                android:id="@+id/button_pass"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginStart="95dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/allbutton"
                android:textColor="#fff"
                android:text="@string/lewatijwbn"
                android:fontFamily="@font/mont"/>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="23dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="73dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/button_a"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/bt_jawabanmenupg_a"
                android:fontFamily="@font/mont"
                android:text="a"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="45sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button_b"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/bt_jawabanmenupg_a"
                android:fontFamily="@font/mont"
                android:text="b"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="45sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/button_c"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/bt_jawabanmenupg_a"
                android:fontFamily="@font/mont"
                android:text="c"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="45sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/button_d"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/bt_jawabanmenupg_a"
                android:fontFamily="@font/mont"
                android:text="d"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="45sp"
                android:textStyle="bold" />


        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/button_e"
                android:layout_width="175dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bt_jawabanmenupg_a"
                android:fontFamily="@font/mont"
                android:text="e"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="45sp"
                android:textStyle="bold" />
        </LinearLayout>
    </TableLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_finish"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/allbutton"
            android:fontFamily="@font/mont"
            android:text="@string/selesai"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>